<div class="x-container">
  <div class="x-header">
    <h1>投稿詳細</h1>
    <%= link_to '投稿一覧に戻る', posts_path, class: 'x-btn x-btn-secondary' %>
  </div>

  <div class="x-post-detail">
    <div class="x-post-card">
      <div class="x-post-header">
        <div class="x-post-user">
          <div class="x-user-avatar">
            <%= @post.user.name.first.upcase %>
          </div>
          <div class="x-user-info">
            <div class="x-user-name"><%= @post.user.name %></div>
            <div class="x-post-time"><%= @post.created_at.strftime("%Y年%m月%d日 %H:%M") %></div>
          </div>
        </div>
        <% if current_user == @post.user %>
          <div class="x-post-actions">
            <%= link_to '編集', edit_post_path(@post), class: 'x-btn x-btn-small' %>
            <%= link_to '削除', post_path(@post), 
                method: :delete, 
                data: { confirm: '本当に削除しますか？' }, 
                class: 'x-btn x-btn-small x-btn-danger' %>
          </div>
        <% end %>
      </div>
      
      <div class="x-post-content">
        <%= simple_format(@post.content) %>
      </div>
    </div>
  </div>
</div>

<style>
.x-container {
  max-width: 600px;
  margin: 0 auto;
  padding: 20px;
}

.x-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
  padding-bottom: 20px;
  border-bottom: 1px solid #e1e8ed;
}

.x-header h1 {
  margin: 0;
  font-size: 24px;
  font-weight: bold;
  color: #0f1419;
}

.x-btn {
  padding: 8px 16px;
  border-radius: 20px;
  text-decoration: none;
  font-weight: 500;
  border: none;
  cursor: pointer;
  transition: background-color 0.2s;
  display: inline-block;
}

.x-btn-secondary {
  background-color: #e1e8ed;
  color: #0f1419;
}

.x-btn-secondary:hover {
  background-color: #d1d9de;
}

.x-btn-small {
  padding: 4px 12px;
  font-size: 12px;
}

.x-btn-danger {
  background-color: #e0245e;
  color: white;
}

.x-btn-danger:hover {
  background-color: #c01e4e;
}

.x-post-detail {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.x-post-card {
  background: white;
  border: 1px solid #e1e8ed;
  border-radius: 12px;
  padding: 20px;
  transition: box-shadow 0.2s;
}

.x-post-card:hover {
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.x-post-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16px;
}

.x-post-user {
  display: flex;
  align-items: center;
  gap: 12px;
}

.x-user-avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background-color: #1d9bf0;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 18px;
}

.x-user-info {
  display: flex;
  flex-direction: column;
}

.x-user-name {
  font-weight: bold;
  color: #0f1419;
  font-size: 16px;
}

.x-post-time {
  color: #536471;
  font-size: 14px;
}

.x-post-actions {
  display: flex;
  gap: 8px;
}

.x-post-content {
  color: #0f1419;
  line-height: 1.6;
  font-size: 16px;
  white-space: pre-wrap;
}
</style> 